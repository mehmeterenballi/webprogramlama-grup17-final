@{
    ViewData["Title"] = "Kayıt Ol";
}


<div class="container-fluid my-5">

    <div class="row justify-content-center">
        <div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3
				   card p-3">

            <form class="card-body" role="form">
                <h4>Kayıt Ol</h4>
                <hr>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input type="text" name="first_name" id="first_name" class="form-control input-lg" placeholder="Ad" tabindex="1">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input type="text" name="last_name" id="last_name" class="form-control input-lg" placeholder="Soyad" tabindex="2">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="text" name="display_name" id="display_name" class="form-control input-lg" placeholder="Kullanıcı Adı" tabindex="3">
                </div>
                <div class="form-group">
                    <input type="email" name="email" id="email" class="form-control input-lg" placeholder="Email Adresi" tabindex="4">
                </div>
                <div class="row">
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input type="password" name="password" id="password" class="form-control input-lg" placeholder="Şifre" tabindex="5">
                        </div>
                    </div>
                    <div class="col-xs-12 col-sm-6 col-md-6">
                        <div class="form-group">
                            <input type="password" name="password_confirmation" id="password_confirmation" class="form-control input-lg" placeholder="Şifre Tekrar" tabindex="6">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-xs-4 col-sm-3 col-md-3">
                        <span class="button-checkbox">
                            <label data-target="t_and_c">Kabul Ediyorum</label>
                            <input type="checkbox" name="t_and_c" id="t_and_c" class="hidden" value="1">
                        </span>
                    </div>
                    <div class="col-xs-8 col-sm-9 col-md-9">
                        <strong class="label label-primary">Kayıt Ol</strong>,
                        butonuna tıkladığınızda
                        <a href="#" data-toggle="modal" data-target="#t_and_c_m">Kullanım Şartları</a>nı
                        kabul ettiğiniz var sayılır.
                    </div>
                </div>

                <hr>
                <div class="row">
                    <input type="submit" value="Kayıt Ol"
                           class="btn btn-primary btn-block btn-lg" tabindex="7">

                </div>
            </form>
        </div>
    </div>
