@model VeritabaniProjesi.ViewModels.HomeViewModel

@using Microsoft.AspNetCore.Identity

@inject SignInManager<MyUser> SignInManager
@inject UserManager<MyUser> UserManager

@{ ViewData["Title"] = "Ana Sayfa"; }

<div class="container-fluid mb-5"
     style="background: url('img/imza-kampanya.jpg') no-repeat center center; background-size:cover;">

    <div class="d-flex flex-column justify-content-center align-items-center p-5">

        <p class="h2 p-3 m-3">Amacımız</p>
        <p class="p-3 m-3 col-md-6">
            degistir.org ' da dünyayı değiştirmek için eline bir şans geçer. Bunu kullanmak için imza kampanyanı başlat ve dilekçeni muhataplarınla beraber yaz.
        </p>


        @if (SignInManager.IsSignedIn(User))
        {
            <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button id="logout" type="submit" class="btn btn-success">Çıkış Yap</button>
            </form>
        }
         else{
            <div class=" p-3 m-3">
                <a asp-area="Identity" asp-page="/Account/Register" class="btn btn-primary btn-lg">Kayıt Ol</a>
                <a asp-area="Identity" asp-page="/Account/Login" class="btn btn-primary btn-lg">Giriş Yap</a>
            </div>
         }
    </div>
</div>

